    <style>



 header {
    color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1em;
    padding-left: 1em;
position: fixed;
width: 98%;
top: 0;
left: 0;
z-index: 1000;
}
.right {
    display: flex;
    gap: 2rem;
    align-items: center;
}
.logo {
        display: flex;

     align-items: center;
}



header img {
    width: 100px;
}

span {
    font-size: 1.2em;
   margin-left: 2.2em;
   letter-spacing: 2.5px;
white-space: nowrap;


}


span .date {
  margin-top: 2rem;
}

    #menu-icon {
  font-size: 3rem;
}
.burger-menu {
    display: flex;
    flex-direction: column;
    cursor: pointer;
    color: white; /* Change the color to the one you prefer */
    text-decoration: none; /* Remove the underline */
    transition: 0.4s;
}

@media (max-width: 768px) {
    header {
        font-size: 14px; /* Adjust the base font size for smaller screens */
    }
}





#menu-icon.bx-menu,
#menu-icon.bx-x {
    font-size: 3rem;
    transition: color 0.4s; /* Add color transition */
}

.burger-menu:hover #menu-icon.bx-menu,
.burger-menu:hover #menu-icon.bx-x {
    color: white; /* Change color on hover */
}

    </style>

