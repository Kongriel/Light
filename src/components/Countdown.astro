  font-weight: normal;
  letter-spacing: .125rem;
  text-transform: uppercase;
   color: white;
}



 li {
  display: inline-block;
  font-size: 1.5em;
  list-style-type: none;
  padding: 0.6em;
  text-transform: uppercase;
   color: white;

 
   
